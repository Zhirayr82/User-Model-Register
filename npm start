nodeauthapp
https://github.com/bradtraversy/nodeauthapp/blob/master/app.js

npm start
sudo npm install -g angular-cli
ng new angular-src
cd angular-src
ng serve 
localhost:4200

cd src/app
mkdir components
cd components

ng g component navbar
ng g component login
ng g component register
ng g component dashboard
ng g component profile


ng cli
localhost:4200

